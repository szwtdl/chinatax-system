### 发送短信
POST {{ host }}/merchant/api/v1/tax/sendSms
Content-Type: application/json
Authorization: Bearer {{ token }}

{
  "username": "{{ username }}",
  "password": "Aa123456",
  "client_id": "{{ client_id }}"
}

> {%
    client.global.set("account_uuid", response.body.data.account_uuid);
    client.global.set("public_uuid", response.body.data.public_uuid);
    client.global.set("sms_code_id", response.body.data.sms_code_id);
    client.global.set("signature_key", response.body.data.signature_key);
%}

### 登录账号
POST {{ host }}/merchant/api/v1/tax/login
Content-Type: application/json
Authorization: Bearer {{ token }}

{
  "client_id": "{{ client_id }}",
  "account_uuid": "{{ account_uuid }}",
  "public_uuid": "{{ public_uuid }}",
  "sms_code_id": "{{ sms_code_id }}",
  "signature_key": "{{ signature_key }}",
  "sms_code": "866678"
}

> {%
    client.global.set("access_token", response.body.data.access_token);
%}


### 账号信息
POST {{ host }}/merchant/api/v1/tax/info
Content-Type: application/json
Authorization: Bearer {{ token }}

{
  "client_id": "{{ client_id }}",
  "public_uuid": "{{ public_uuid }}",
  "access_token": "{{ access_token }}",
  "signature_key": "{{ signature_key }}"
}

> {%
    client.global.set("user_id", response.body.data.user_id);
%}


### 默认手机号码
POST {{ host }}/merchant/api/v1/tax/account/DefaultMobile
Content-Type: application/json
Authorization: Bearer {{ token }}

{
  "user_id": "{{ user_id }}",
  "client_id": "{{ client_id }}",
  "public_uuid": "{{ public_uuid }}",
  "access_token": "{{ access_token }}",
  "signature_key": "{{ signature_key }}"
}

> {%
    client.global.set("mobile_id", response.body.data.mobileId);
%}


